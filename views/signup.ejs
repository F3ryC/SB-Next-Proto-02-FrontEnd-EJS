<section class="page-header">
  <div class="container">
    <h1>Create Account</h1>
    <p>Join Sproutbeat and start your music teaching journey</p>
  </div>
</section>

<section class="login-section">
  <div class="container">
    <div class="login-form-container">
      <% /* Error/success messages will be handled by JS and shown here */ %>
      <form class="login-form"><% /* JS will handle submission, no action/method needed */ %>
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" id="username" name="username" class="form-control" required>
        </div>
        
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" required>
        </div>
        
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" required>
        </div>
        
        <div class="form-group">
          <label for="name">Full Name</label>
          <input type="text" id="name" name="name" class="form-control" required>
        </div>
        
        <div class="form-options">
          <div class="remember-me">
            <input type="checkbox" id="remember" name="remember">
            <label for="remember">Remember me</label>
          </div>
        </div>
        
        <div class="form-actions">
          <button type="submit" class="btn btn-primary btn-full">Create Account</button>
        </div>
        
        <div class="form-footer">
          <p>Already have an account? <a href="/login">Sign in</a></p>
        </div>
      </form>
    </div>
  </div>
</section>

<% /* Include signup-handler.js for AJAX registration (see /public/js/signup-handler.js) */ %>
<script type="module" src="/js/signup-handler.js"></script> 